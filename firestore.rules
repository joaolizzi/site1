rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para candidatos - acesso público para leitura e escrita
    match /candidates/{candidateId} {
      allow read, write: if true;
    }
    
    // Regras para configurações administrativas
    match /admin/{document} {
      allow read, write: if true;
    }
    
    // Regras para logs e auditoria
    match /logs/{logId} {
      allow read, write: if true;
    }
    
    // Regras para backup e sincronização
    match /backup/{backupId} {
      allow read, write: if true;
    }
  }
}

